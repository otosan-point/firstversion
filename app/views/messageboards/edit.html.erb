<div class="boxA">
  <%= form_with model: @messageboard, local: true  do |form| %>
    <u><p>我が家のルール</p></u><br>
    <%= form.text_area :rule, placeholder: @messageboard.rule, style: 'width: 100%;height: 50px;' %><br>
    <u><p>伝言板</p></u><br>
    <%= form.text_area :message , placeholder: @messageboard.message, style: 'width: 100%;height: 50px;' %><br>
    <a class="btn-flat-update">
      <%= form.submit "アップデート", class: "fa fa-caret-right" %>
    </a>
  <% end %>
</div>