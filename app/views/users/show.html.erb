<div class="boxA">
  <div class="box7">
    
    <% @kids.each do |kid| %>
      <% @promises.each do |prom| %>
       <% if prom.kid_id == kid.id %>
    
        <div class="twitter__container">
          <!-- タイトル -->
          <div class="twitter__title">
           【<%= kid.name %>】
           <%= prom.promise %>
           <a class="btn-sticky"><%= prom.opactions.count %>ポイント</a> <!-- 本当はapproveでカウントしたい -->
          </div>
      
          <!-- ▼タイムラインエリア scrollを外すと高さ固定解除 -->
          <div class="twitter__contents">
      
            <% @opactions.each do |opaction| %>
              <% if opaction.promise_id == prom.id && opaction.kid_id != nil %>
                
                <!-- 記事エリア -->
                <div class="twitter__block">
                  <figure>
                    <i class="fas fa-child"></i>
                  </figure>
                  <div class="twitter__block-text">
                    <div class="name"><%= kid.name %><span class="name_reply"></span></div>
                    <div class="date"><%= time_ago_in_words opaction.created_at %></div>
                    <div class="text">
                      <%= opaction.comment %><br>
                    </div>
                    <div class="twitter__icon">
                      <span class="twitter-bubble"></span>
                      <span class="twitter-loop"></span>
                      <span class="twitter-heart"></span>
                    </div>
                  </div>
                </div>
    
              <% elsif opaction.promise_id == prom.id && opaction.kid_id == nil %>
                
                <!-- 記事エリア -->
                <div class="twitter__block">
                  <figure>
                    <i class="fas fa-user-tie"></i>
                  </figure>
                  <div class="twitter__block-text">
                    <div class="name">おとうさん<span class="name_reply"></span></div>
                    <div class="date"><%= time_ago_in_words opaction.created_at %></div>
                    <div class="text">
                      <%= opaction.comment %><br>
                    </div>
                    <div class="twitter__icon">
                      <span class="twitter-bubble"></span>
                      <span class="twitter-loop"></span>
                      <span class="twitter-heart"></span>
                    </div>
                  </div>
                </div>
    
              <% end %>
            <% end %>
              
            <%= form_for @opaction do |f| %>
              <%= f.text_area :comment, placeholder: '応援して', style: 'width: 100%;height: 25px;' %>
              <a class="btn-flat-simple">
                <%= f.submit "送信", class: "fa fa-caret-right" %>
              </a>
            <% end %>
    
          </div>
          <!--　▲タイムラインエリア ここまで -->
        </div>
        <!--　▲twitter風ここまで -->
        
       <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="box3">
    <div class="right-box">
      <a><%= link_to "子供プロフィール設定", kid_path(current_user) %></a>
    </div>
  </div>
</div>
